        </Style>
    </Page.Resources>

    <Grid>
        <Image Margin="50.1,67.5,373.9,112.5" Source="pngwing.com (3).png" Stretch="Fill"/>
        <Image Margin="212.8,67.52,211.2,112.48" Source="585e4bc4cb11b227491c3395.png" Stretch="Fill" Width="110" Height="128"/>
        <Image Margin="381,69,43,111" Source="av2-1.png" Stretch="Fill" Width="110" Height="128"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="44.4" Margin="34.8,232.8,0,0" Style="{DynamicResource ButtonStyle2}" VerticalAlignment="Top" Width="140.4" Click="U1"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="44.4" Margin="196.8,232.8,0,0" Style="{DynamicResource ButtonStyle3}" VerticalAlignment="Top" Width="140.4" Click="U2"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="44.4" Margin="364.8,232.8,0,0" Style="{DynamicResource ButtonStyle4}" VerticalAlignment="Top" Width="140.4" Click="U3"/>

    </Grid>
